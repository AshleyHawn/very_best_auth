<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cuisine #<%= @cuisine.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @cuisine.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/cuisines" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/cuisines/<%= @cuisine.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_cuisine/<%= @cuisine.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>

              <ul class="list-group">
              <% @cuisine.dishes.each do |dish| %>
                <li class="list-group-item">
                <a href="">
                <%= dish.name %>
                </li>
              <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Cuisine</h3>
      </div>
      <div class="panel-body">
        <form action="/create_cuisine" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @cuisine.name %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Cuisine
              </button>
              or
              <a href="/cuisines">Cancel</a>
            </div>
          </div>
        </form>
</div>

<!-- End responsive panel example -->
